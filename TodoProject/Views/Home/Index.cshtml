@model IEnumerable<TodoProject.Models.TaskMaster>

@{
    ViewData["Title"] = "Index";
}

<h1>Tasks</h1>
<div class="card card-body">
    <form class="form d-flex align-items-center" method="post" asp-action="Todo">
        <div class="form-group">
            <label>Task</label>
            <input type="text" name="Name" />
        </div>
        <button type="submit" class="btn mr-2 btn-sm btn-primary">Save</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDone)
            </td>
            <td>
                <form asp-action="DoneUndone" method="post">
                    <input type="hidden" name="Id" value="@item.Id">
                    
                        @if(item.IsDone)
                            {
                                <button type="submit" class="btn btn-success">
                                 Undone   
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success">
                                 Done   
                                </button>
                            }
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
